<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomFont">
        <attr name="fontName" format="string" />
    </declare-styleable>

    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_icon" format="reference" />
        <attr name="fab_size" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
        </attr>
        <attr name="fab_title" format="string" />
        <attr name="fab_stroke_visible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CollectionPicker">
        <attr name="cp_itemRadius" format="dimension" />
        <attr name="cp_itemBackgroundNormal" format="color" />
        <attr name="cp_itemBackgroundPressed" format="color" />
        <attr name="cp_addIcon" format="reference" />
        <attr name="cp_cancelIcon" format="reference" />
        <attr name="cp_itemMargin" format="dimension" />
        <attr name="cp_itemTextColorNormal" format="color" />
        <attr name="cp_itemTextColorPressed" format="color" />
        <attr name="cp_textPaddingLeft" format="dimension" />
        <attr name="cp_textPaddingRight" format="dimension" />
        <attr name="cp_textPaddingTop" format="dimension" />
        <attr name="cp_textPaddingBottom" format="dimension" />
    </declare-styleable>
</resources>